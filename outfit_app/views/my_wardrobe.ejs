<%- layout('layout.ejs') %>

<div class="container py-5">
    <h2 class="text-center mb-4">Your Wardrobe</h2>
    <p class="text-center">Manage your wardrobe items here.</p>
    <div class="text-center mb-5">
        <a href="/my_wardrobe/upload" class="btn btn-primary">Upload a New Item</a>
    </div>

    <!-- Tops Section -->
    <div class="category">
        <h3 class="category-title">Tops</h3>
        <div class="row">
            <% topware.forEach(function(item) { %>
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <!-- Card for Top item -->
                    <div class="card shadow-sm d-flex flex-column h-100">
                        <img src="<%= item.image %>" alt="Top item" class="card-img-top img-fluid">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">Sub Category: <%= item.sub_category %></h5>
                            <p class="card-text"><strong>Description:</strong> <%= item.desc %></p>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between">
                                    <a href="/my_wardrobe/detail/<%= item._id %>" class="btn btn-sm btn-outline-info" style="height:max-content;">Edit</a>
                                    <form action="<%= `/wardrobe_item/delete/${item._id}` %>?_method=DELETE" method="POST" class="d-inline">
                                        <button class="btn btn-sm btn-outline-danger">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <!-- Bottomware Section -->
    <div class="category">
        <h3 class="category-title">Bottomware</h3>
        <div class="row">
            <% bottomware.forEach(function(item) { %>
                <% if(item.main_category === 'bottomware') { %>
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <!-- Card for Bottomware item -->
                    <div class="card shadow-sm d-flex flex-column h-100">
                        <img src="<%= item.image %>" alt="Bottom item" class="card-img-top img-fluid">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">Sub Category: <%= item.sub_category %></h5>
                            <p class="card-text"><strong>Description:</strong> <%= item.desc %></p>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between">
                                    <a href="/my_wardrobe/detail/<%= item._id %>" class="btn btn-sm btn-outline-info" style="height:max-content;">Edit</a>
                                    <form action="<%= `/wardrobe_item/delete/${item._id}` %>?_method=DELETE" method="POST" class="d-inline">
                                        <button class="btn btn-sm btn-outline-danger">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
            <% }); %>
        </div>
    </div>

    <!-- Footwear Section -->
    <div class="category">
        <h3 class="category-title">Footwear</h3>
        <div class="row">
            <% footware.forEach(function(item) { %>
                <% if(item.main_category === 'footware') { %>
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <!-- Card for Footwear item -->
                    <div class="card shadow-sm d-flex flex-column h-100">
                        <img src="<%= item.image %>" alt="Footwear item" class="card-img-top img-fluid">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">Sub Category: <%= item.sub_category %></h5>
                            <p class="card-text"><strong>Description:</strong> <%= item.desc %></p>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between">
                                    <a href="/my_wardrobe/detail/<%= item._id %>" class="btn btn-outline-info" style="height:max-content;">Edit</a>
                                    <form action="<%= `/wardrobe_item/delete/${item._id}` %>?_method=DELETE" method="POST" class="d-inline">
                                        <button class="btn btn-sm btn-outline-danger">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
            <% }); %>
        </div>
    </div>
</div>

